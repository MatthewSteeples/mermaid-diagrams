{
  "name": "mermaid-diagrams-vso",
  "version": "1.0.0",
  "description": "Enable `Mermaid diagrams` on visualstudio online (VSO)",
  "homepage_url": "https://github.com/howard0su/mermaid-diagrams",
  "manifest_version": 2,
  "minimum_chrome_version": "56",
  "permissions": [
    "https://*.visualstudio.com/*"
  ],
  "icons": {
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "https://*.visualstudio.com/*"
      ],
      "css": [
        "diagrams.css",
        "on_change_animation.css"
      ],
      "js": [
        "mermaid.min.js",
        "content.js"
      ]
    }
  ]
}
